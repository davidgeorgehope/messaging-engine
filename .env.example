# API Keys
ANTHROPIC_API_KEY=your-anthropic-api-key
GOOGLE_AI_API_KEY=your-google-ai-api-key
GITHUB_TOKEN=optional-github-token-for-discovery

# Database
DATABASE_URL=./data/messaging-engine.db

# Server
PORT=3002
HOST=0.0.0.0
NODE_ENV=development
JWT_SECRET=change-this-secret-in-production

# Admin Auth
ADMIN_USERNAME=admin
ADMIN_PASSWORD=change_this_password

# Job Scheduling
DISCOVERY_CRON="0 */4 * * *"
GENERATION_CRON="*/15 * * * *"

# Quality Thresholds (defaults, overridden per voice profile)
MAX_SLOP_SCORE=5
MAX_VENDOR_SPEAK_SCORE=5
MIN_AUTHENTICITY_SCORE=6
MIN_SPECIFICITY_SCORE=6
MIN_PERSONA_SCORE=6
MIN_PAIN_SCORE=60

# Discovery
MAX_POSTS_PER_RUN=50
DEDUPLICATION_WINDOW_DAYS=30

# Generation
MAX_CONCURRENT_JOBS=3
MAX_GENERATION_RETRIES=3

# Deep Research
DEEP_RESEARCH_POLL_INTERVAL_MS=30000
DEEP_RESEARCH_TIMEOUT_MS=3600000

# Slack (optional, for Slack community discovery)
SLACK_BOT_TOKEN=xoxb-your-slack-bot-token
SLACK_APP_TOKEN=xapp-your-slack-app-token
